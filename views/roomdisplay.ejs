<center>
    <h1>Create a room or join an existing room</h1><br><br>
    <% if(statusroom==false){ %>
        <font color="red"><p><%= message %></p></font>
   <% } %>
<form action="/create/room/<%= userCreated._id %>/<%=  userCreated.username%>" method="POST">
